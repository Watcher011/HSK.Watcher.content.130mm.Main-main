				</filter>
				<count>36</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
				<li>HeavyBar</li>
			</categories>
			<thingDefs>
				<li>WhitePhosphorus</li>
				<li>Powder</li>
			</thingDefs>
		</fixedIngredientFilter>
