<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef>
    <defName>ExtractPhosphorus</defName>
    <label>Получение белого фосфора</label>
    <description>Получение белого фосфора</description>
    <jobString>Получает белый фосфор.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
	<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Nitre</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulfur</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Nitre</li>
				<li>Sulfur</li>
			</thingDefs>	  
		</fixedIngredientFilter>
    <products>
     <WhitePhosphorus>45</WhitePhosphorus>
    </products>
  </RecipeDef>
  
  
  
  <RecipeDef>
    <defName>ExtractBioVirus</defName>
    <label>Получение модифицированного штамма чумы х2</label>
    <description>Культивация опасного штамма чумы</description>
    <jobString>Культивирует вирус.</jobString>
    <workAmount>1400</workAmount>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
	     <recipeUsers>
			 <li>DrugLab</li>
		</recipeUsers>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Biomatter</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineIndustrial</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		 <li>
           <filter>
          <categories>
            	<li>CorpsesHumanlike</li>
          </categories>
          </filter>
        <count>1</count>
           </li>
		</ingredients>
		<fixedIngredientFilter>
		 <categories>
       	<li>CorpsesHumanlike</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
			<thingDefs>
			<li>MedicineIndustrial</li>
				<li>Biomatter</li>
				<li>Neutroamine</li>
			</thingDefs>	  
		</fixedIngredientFilter>
		<defaultIngredientFilter>
      <thingDefs>
        <li>Corpse_Human</li>
      </thingDefs>
      <specialFiltersToAllow>
        <li>AllowCorpsesColonist</li>
        <li MayRequire="Ludeon.RimWorld.Ideology">AllowCorpsesSlave</li>
        <li>AllowCorpsesStranger</li>
      </specialFiltersToAllow>
    </defaultIngredientFilter>
    <products>
     <bio_container>2</bio_container>
    </products>
	<skillRequirements>
		     <Medicine>10</Medicine>
			<Crafting>5</Crafting>
		</skillRequirements>
  </RecipeDef>
</Defs>
